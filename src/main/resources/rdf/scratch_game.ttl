@prefix tgeo: <https://github.com/kdports/TextGameEngine/ontology/> .
@prefix tged: <https://github.com/kdports/TextGameEngine/data/> .

# Just the description of a slide that has two options: "Do literally nothing" and "Also literally nothing, but more!".
# These two decisions lead back into the same slide in a loop forever.

tged:_scene_1 a tgeo:Slide ;
    tgeo:categorizedAs tgeo:firstSlide ;
    tgeo:hasText "This is crazy! You are in a game!" ;
    tgeo:hasDecision tged:_decision_1_1 ;
    tgeo:hasDecision tged:_decision_1_2 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .

tged:_decision_1_1 a tgeo:Decision ;
    tgeo:hasText "Do literally nothing" ;
    tgeo:directsTo tged:_scene_1 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .

tged:_decision_1_2 a tgeo:Decision ;
    tgeo:hasText "Go a little further!" ;
    tgeo:directsTo tged:_scene_2 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .

tged:_scene_2 a tgeo:Slide ;
    tgeo:hasText "At this point, what do you do?" ;
    tgeo:hasDecision tged:_decision_2_1 ;
    tgeo:hasDecision tged:_decision_2_2 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .

tged:_decision_2_1 a tgeo:Decision ;
    tgeo:hasText "Do nothing again!" ;
    tgeo:directsTo tged:_scene_2 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .

tged:_decision_2_2 a tgeo:Decision ;
    tgeo:hasText "Go back to the beginning!" ;
    tgeo:directsTo tged:_scene_1 ;
    tgeo:hasXLocation 50 ;
    tgeo:hasYLocation 50 .